<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body className="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
	<div className="card mt-2">
		
		<div className="card-header">
	     <h5 className="card-title">BORSA TREBALL</h5>
	  </div>

    <div className="card-body">
	    
			<table className="table table-striped">
		  		<thead>
				    <tr>		      
				      <th scope="col">Titol</th>
					  <th scope="col">Descripcio</th>
					  <th scope="col">Skills</th>
					  <th scope="col">Empresa</th>
				     
				      </th>
				    </tr>
		  		</thead>
			  	<tbody>
			  		<% listaOfertas.forEach( function(oferta) { %>
					    <tr>
							      
					      <td><%= oferta.title %></td>
						  <td><%= oferta.description %></td>
						  <td><%= oferta.skills %></td>
						  <td><%= oferta.createBy.nomEmpresa %></td>
						  <!-- EL nom empresa falla porque aun no pilla el token id de la empresa que esta logueada -->
						  <td>
							<a href="update/<%= oferta._id %>"><button type="button" className="btn btn-primary">Update</button></a>
							<a href="remove/<%= oferta._id %>" ><button type="button" className="btn btn-danger">Delete</button></a>
					      </td>
					      </td>		      
					    </tr>
			   		<% }); %>	     
			    </tbody>
		  </table>	     
	    
		</div>
		
	</div>
 
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>