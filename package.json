{
    "name": "node-template",
    "version": "1.0.0",
    "type": "module",
    "description": "Plantilla base para los proyectos desarrollados en el curso de Node.JS de la plataforma LearnThis Academy",
    "scripts": {
        "dev": "nodemon src/index.js",
        "start": "node src/index.js",
        "lint": "eslint src/**/*.js --fix",
        "prettier": "prettier --write .",
        "prepare": "husky install",
        "postinstall": "npm run prepare",
        "test": "node src/test/test.js"
    },
    "author": {
        "name": "Marc Gruber, Helder Rivas, Gerard Suau",
        "url": "https://github.com/Suau17 , https://github.com/MarcGruber, https://github.com/HelderRivas"
    },
    "license": "MIT",
    "devDependencies": {
        "eslint": "8.22.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-config-standard": "17.0.0",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-n": "15.2.5",
        "eslint-plugin-promise": "6.0.0",
        "husky": "8.0.1",
        "lint-staged": "13.0.3",
        "nodemon": "^2.0.19",
        "prettier": "2.7.1"
    },
    "imports": {
        "#config/*": "./src/config/*",
        "#Lib/*": "./src/lib/*",
        "#public/*": "./src/public/*",
        "#routes/*": "./src/routes/*",
        "#schemas/*": "./src/schemas/*",
        "#controllers/*": "./src/controllers/*",
        "#seeders/*": "./src/seeders/*"
    },
    "lint-staged": {
        "*.js": "eslint --fix",
        "*.{js,md}": "prettier --write"
    },
    "dependencies": {
        "@sinclair/typebox": "^0.24.47",
        "ajv": "^8.11.0",
        "ajv-errors": "^3.0.0",
        "ajv-formats": "^2.1.1",
        "axios": "^1.1.3",
        "bcrypt": "^5.1.0",
        "body-parser": "^1.20.1",
        "cjs": "^0.0.11",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "ejs": "^3.1.8",
        "express": "^4.18.2",
        "faker": "^5.5.3",
        "mongoose": "^6.6.5",
        "require": "^0.4.4",
        "uuid": "^9.0.0"
    }
}
